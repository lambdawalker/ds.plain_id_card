<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>INE Credencial (SimulaciÃ³n)</title>
    <link rel="stylesheet" href="../_common_/base.css.j2">
    <link rel="stylesheet" href="style.css.j2">
</head>
<body>
<div id="view-port">
    <div class="card">
        <header class="card-header">
            <div class="title-section">
                <div class="title">
                    <h3>{{ gen.text.sentence((1,3)) }}</h3>
                    {% if gen.random.boolean() %}
                        <h4>{{ gen.text.sentence((1,3)) }}</h4>
                    {% endif %}
                </div>
            </div>
        </header>
        <main class="card-body">
            <div class="data-section">
                <img class="main-photo" src="/ds/lambdaWalker/ds.photo_id/body/{{ data.id }}/image" data-class="photo" alt="Photo">

                <div class="data-item name">
                    <p>{{ gen.text.sentence((1,3), p=False) }}</p>
                    <p>{{ gen.text.sentence((1,2), p=False) }}</p>
                </div>

                <div class="data-item middle">
                    <p>{{ gen.address.number().data }} {{ gen.text.sentence((1,3), p=False) }}</p>
                    <p>{{ gen.address.block().data }} {{ gen.address.number().data }} </p>
                    <p>{{ gen.address.city().data }}, {{ gen.address.state().data }}</p>
                </div>
                <div class="data-group bottom-row">
                    {% for i in range(6) %}
                        <div class="data-item">
                            <label>{{ gen.text.word((1,3)) }}</label>
                            <p>{{ gen.text.word((1,3)) }}</p>
                        </div>
                    {% endfor %}
                </div>

                <div class="data-item key-curp">
                    <div class="curp">
                        <label>{{ gen.text.word((2,4)) }}</label>
                        <span>{{ gen.random.hex(18) }}</span>
                    </div>
                    <div class="year">
                        <label>{{ gen.text.word((2,4)) }}</label>
                        <span>{{ gen.time.year_as_number().data }}</span>
                    </div>
                    <div class="year">
                        <label>{{ gen.text.word((2,4)) }}</label>
                        <span>{{ gen.time.year_as_number().data }}</span>
                    </div>
                </div>

                <div class="data-group bottom-row">
                    {% for i in range(3) %}
                        <div class="data-item">
                            <label>{{ gen.text.word((1,3)) }}</label>
                            <p>{{ gen.text.word((1,3)) }}</p>
                        </div>
                    {% endfor %}
                </div>

                <div class="data-item middle">
                    <p><span>{{ gen.text.letter() }}.</span> {{ gen.address.number().data }} {{ gen.text.sentence((1,3), p=False) }}</p>
                    <p><span>{{ gen.text.letter() }}.</span> {{ gen.address.block().data }} {{ gen.address.number().data }} </p>
                </div>

            </div>
        </main>
    </div>
</div>
</body>
</html>
