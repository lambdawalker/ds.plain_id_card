{# Define randomization variables #}
{%- set fonts = ['Arial', 'Verdana', 'Georgia', 'Courier New', 'Brush Script MT'] -%}
{%- set header_dir = ['row', 'row-reverse'] | random -%}
{%- set main_dir = ['column', 'column-reverse'] | random -%}
{%- set card_dir = ['column', 'column-reverse'] | random -%}
{%- set photo_align = ['flex-start', 'flex-end', 'center'] | random -%}
{%- set photo_bg = ['white', 'transparent'] | random -%}
{%- set photo_opacity = (range(60, 100) | random) / 100 -%}
{%- set scale = (range(95, 110) | random) / 100 -%}

#view-port {
    display: inline-block;
}


body {
    font-family: {{ fonts | random }};
    font-size: 8mm;
    margin: 0;
    padding: 0;
}

.small-text {
    font-size: .5em;
    text-transform: uppercase;
    opacity: 0.8;
}


.photo-container {
    display: flex;
    flex-direction: {{ ["row-reverse", "row"] | random }};
    padding: 20mm;
}

.photo-text {
    margin: 0 10mm;
}

.card {
    margin: 0;
    padding: 0;
    border: none;

    width: 357mm;
    height: 213mm;

    display: flex;
    flex-direction: {{ card_dir }};
}

header {
    height: 1.2cm;
    background: white;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1mm 2mm;
    flex-direction: {{ header_dir }};
}

.barcode {
    height: 8mm;
    width: auto;
    transform: scale({{ scale }});
    margin: 0 {{ range(8, 15) | random }}mm;
}

main {
    flex-grow: 1;
    display: flex;
    flex-direction: {{ main_dir }};
    align-items: {{ photo_align }};
    justify-content: center;
    gap: 2mm;
    padding: 2mm;
}

.photo {
    display: block;
    width: {{ 120 * scale }}mm;
    height: {{ 25 * scale }}mm;
    background-color: {{ photo_bg }};
    object-fit: cover;
    border: 0.1mm {{ ["solid", "none"] | random }} #ccc;
}

.data-section {
    width: 100%;
}

.sep-line {
    background-color: white;
    padding: 1mm;
    margin: 1mm 0;
}

.embedded {
    font-family: 'OCR-B', 'Courier New', monospace;
    margin-right: 1em;
    font-weight: bold;
}

.mrz-text {
    font-family: 'OCR-B', 'Courier New', monospace;
    white-space: pre;
    color: rgba(0, 0, 0, 0.85);
    letter-spacing: 2px;
    filter: blur(0.15px) contrast(1.3);
    text-shadow: 0.2px 0.2px 0.3px rgba(0, 0, 0, 0.2);
    font-size: 1.8em;
    text-align: center;
    line-height: 1.1;
    padding: 2mm 0;
}

.extra-info {
    font-size: 0.4em;
    font-style: italic;
}